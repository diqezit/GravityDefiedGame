<Window x:Class="GravityDefiedGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gravity Defied"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Style="{StaticResource CustomWindowStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top information panel -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderGradient}"
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="LevelNameText"
                           Grid.Column="1"
                           Text="УРОВЕНЬ 1"
                           Foreground="{StaticResource TextBrush}"
                           FontWeight="Bold"
                           FontSize="20"/>

                <TextBlock x:Name="TimeText"
                           Grid.Column="2"
                           Text="00:00"
                           Foreground="{StaticResource TextBrush}"
                           FontWeight="Bold"
                           FontSize="18"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Game canvas -->
        <Canvas x:Name="GameCanvas"
                Grid.Row="1"
                ClipToBounds="True"/>

        <!-- Bottom control panel -->
        <Border Grid.Row="2"
                Background="{StaticResource HeaderGradient}"
                Padding="15,10">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="W - Газ | S - Тормоз | A/D - Наклон | R - Рестарт | ESC - Меню"
                           Foreground="{StaticResource SubtextBrush}"
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Menu overlay -->
        <Border x:Name="MenuOverlay"
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="{StaticResource OverlayBrush}"
                Visibility="Collapsed">
            <Border Style="{StaticResource GlassPanel}"
                    Width="350">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock x:Name="MenuTitle"
                               Text="ПАУЗА"
                               Style="{StaticResource HeaderText}"
                               Margin="0,0,0,30"/>

                    <Button Content="ПРОДОЛЖИТЬ"
                            Style="{StaticResource ContinueButton}"
                            Width="250"
                            Height="60"
                            Margin="0,10"
                            FontSize="20"
                            Command="{Binding ContinueCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="▶️" FontSize="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="НАЧАТЬ ЗАНОВО"
                            Style="{StaticResource RoundButton}"
                            Width="250"
                            Height="60"
                            Margin="0,10"
                            FontSize="20"
                            Command="{Binding RestartCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔄" FontSize="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="ВЫБОР БАЙКА"
                            Style="{StaticResource RoundButton}"
                            Background="{StaticResource AccentGradient}"
                            Width="250"
                            Height="60"
                            Margin="0,10"
                            FontSize="20"
                            Command="{Binding BikeSelectCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏍️" FontSize="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="ВЫБОР УРОВНЯ"
                            Style="{StaticResource RoundButton}"
                            Background="{StaticResource WarningGradient}"
                            Width="250"
                            Height="60"
                            Margin="0,10"
                            FontSize="20"
                            Command="{Binding LevelSelectCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏁" FontSize="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button Content="ВЫХОД"
                            Style="{StaticResource ExitButton}"
                            Width="250"
                            Height="60"
                            Margin="0,10"
                            FontSize="20"
                            Command="{Binding ExitCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🚪" FontSize="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </Border>
        </Border>

        <!-- Level selection overlay -->
        <Border x:Name="LevelSelectOverlay"
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="{StaticResource OverlayBrush}"
                Visibility="Collapsed">
            <Border Style="{StaticResource GlassPanel}" 
                    MaxWidth="800" 
                    MaxHeight="600">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ВЫБОР УРОВНЯ"
                               Grid.Row="0"
                               Style="{StaticResource HeaderText}"/>

                    <ScrollViewer Grid.Row="1" 
                                  HorizontalScrollBarVisibility="Disabled" 
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0,10,0,10"
                                  Template="{StaticResource CustomScrollViewerTemplate}">
                        <WrapPanel x:Name="LevelsPanel"
                                   HorizontalAlignment="Center"/>
                    </ScrollViewer>

                    <Button Content="НАЗАД"
                            Grid.Row="2"
                            Style="{StaticResource RoundButton}"
                            Background="{StaticResource DangerGradient}"
                            Width="150"
                            Height="50"
                            Margin="0,20"
                            FontSize="18"
                            HorizontalAlignment="Center"
                            Command="{Binding BackCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⬅️" FontSize="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </Grid>
            </Border>
        </Border>

        <!-- Bike selection overlay -->
        <Border x:Name="BikeSelectOverlay"
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="{StaticResource OverlayBrush}"
                Visibility="Collapsed">
            <Border Style="{StaticResource GlassPanel}" 
                    MaxWidth="550" 
                    MaxHeight="600">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ВЫБОР БАЙКА"
                               Grid.Row="0"
                               Style="{StaticResource HeaderText}"/>

                    <ScrollViewer Grid.Row="1" 
                                  HorizontalScrollBarVisibility="Disabled" 
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0,10,0,10"
                                  Template="{StaticResource CustomScrollViewerTemplate}">
                        <StackPanel VerticalAlignment="Center">
                            <!-- Standard bike -->
                            <Border Style="{StaticResource BikeCard}">
                                <Grid Margin="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Column="0"
                                            Grid.RowSpan="2"
                                            Style="{StaticResource BikeIcon}">
                                        <TextBlock Text="🏍️" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Text="СТАНДАРТНЫЙ"
                                               Grid.Column="1"
                                               Grid.Row="0"
                                               Style="{StaticResource SubHeaderText}"/>

                                    <TextBlock Text="Сбалансированный мотоцикл с хорошими характеристиками"
                                               Grid.Column="1"
                                               Grid.Row="1"
                                               Style="{StaticResource DescriptionText}"/>

                                    <Button Content="ВЫБРАТЬ"
                                            Tag="Standard"
                                            Grid.Column="2"
                                            Grid.RowSpan="2"
                                            Style="{StaticResource RoundButton}"
                                            Background="{StaticResource PrimaryGradient}"
                                            Width="120"
                                            Height="45"
                                            Margin="10,0,0,0"
                                            Command="{Binding BikeTypeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"/>
                                </Grid>
                            </Border>

                            <!-- Sport bike -->
                            <Border Style="{StaticResource BikeCard}">
                                <Grid Margin="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Column="0"
                                            Grid.RowSpan="2"
                                            Style="{StaticResource BikeIcon}"
                                            Background="{StaticResource RedBrush}">
                                        <TextBlock Text="🏎️" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Text="СПОРТИВНЫЙ"
                                               Grid.Column="1"
                                               Grid.Row="0"
                                               Style="{StaticResource SubHeaderText}"/>

                                    <TextBlock Text="Легкий и мощный мотоцикл с высокой скоростью"
                                               Grid.Column="1"
                                               Grid.Row="1"
                                               Style="{StaticResource DescriptionText}"/>

                                    <Button Content="ВЫБРАТЬ"
                                            Tag="Sport"
                                            Grid.Column="2"
                                            Grid.RowSpan="2"
                                            Style="{StaticResource RoundButton}"
                                            Background="{StaticResource AccentGradient}"
                                            Width="120"
                                            Height="45"
                                            Margin="10,0,0,0"
                                            Command="{Binding BikeTypeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"/>
                                </Grid>
                            </Border>

                            <!-- Off-road bike -->
                            <Border Style="{StaticResource BikeCard}">
                                <Grid Margin="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Column="0"
                                            Grid.RowSpan="2"
                                            Style="{StaticResource BikeIcon}"
                                            Background="{StaticResource GreenBrush}">
                                        <TextBlock Text="🚵" 
                                                   FontSize="24" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Text="ВНЕДОРОЖНЫЙ"
                                               Grid.Column="1"
                                               Grid.Row="0"
                                               Style="{StaticResource SubHeaderText}"/>

                                    <TextBlock Text="Тяжелый мотоцикл с хорошим сцеплением для пересеченной местности"
                                               Grid.Column="1"
                                               Grid.Row="1"
                                               Style="{StaticResource DescriptionText}"/>

                                    <Button Content="ВЫБРАТЬ"
                                            Tag="OffRoad"
                                            Grid.Column="2"
                                            Grid.RowSpan="2"
                                            Style="{StaticResource RoundButton}"
                                            Background="{StaticResource WarningGradient}"
                                            Width="120"
                                            Height="45"
                                            Margin="10,0,0,0"
                                            Command="{Binding BikeTypeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <Button Content="НАЗАД"
                            Grid.Row="2"
                            Style="{StaticResource RoundButton}"
                            Background="{StaticResource DangerGradient}"
                            Width="150"
                            Height="50"
                            Margin="0,20"
                            FontSize="18"
                            HorizontalAlignment="Center"
                            Command="{Binding BikeSelectBackCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⬅️" FontSize="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </Grid>
            </Border>
        </Border>

        <!-- Notification panel -->
        <Border x:Name="NotificationPanel"
                Grid.Row="1"
                Style="{StaticResource NotificationPanel}"
                Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <Border Width="36" 
                        Height="36" 
                        Background="{StaticResource BlueBrush}" 
                        CornerRadius="18"
                        Margin="0,0,12,0">
                    <TextBlock Text="ℹ️" 
                               FontSize="20" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock x:Name="NotificationText"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"
                           TextAlignment="Left"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>