<Window x:Class="GravityDefiedGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gravity Defied"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top information panel -->
        <Border Grid.Row="0"
                Background="{StaticResource OverlayBrush}"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="LevelNameText"
                           Grid.Column="1"
                           Text="УРОВЕНЬ 1"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="20"/>

                <TextBlock x:Name="TimeText"
                           Grid.Column="2"
                           Text="00:00"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="18"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Game canvas -->
        <Canvas x:Name="GameCanvas"
                Grid.Row="1"
                ClipToBounds="True"/>

        <!-- Bottom control panel -->
        <Border Grid.Row="2"
                Background="{StaticResource OverlayBrush}"
                Padding="10">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="W - Газ | S - Тормоз | A/D - Наклон | R - Рестарт | ESC - Меню"
                           Foreground="White"
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Menu overlay -->
        <Border x:Name="MenuOverlay"
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="{StaticResource OverlayBrush}"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock x:Name="MenuTitle"
                           Text="ПАУЗА"
                           Foreground="White"
                           FontSize="48"
                           FontWeight="Bold"
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"/>

                <Button Content="ПРОДОЛЖИТЬ"
                        Style="{StaticResource RoundButton}"
                        Width="250"
                        Height="60"
                        Margin="0,10"
                        FontSize="20"
                        Click="ContinueButton_Click"/>

                <Button Content="НАЧАТЬ ЗАНОВО"
                        Style="{StaticResource RoundButton}"
                        Width="250"
                        Height="60"
                        Margin="0,10"
                        FontSize="20"
                        Click="RestartButton_Click"/>

                <Button Content="ВЫБОР БАЙКА"
                        Style="{StaticResource RoundButton}"
                        Width="250"
                        Height="60"
                        Margin="0,10"
                        FontSize="20"
                        Click="BikeSelectButton_Click"/>

                <Button Content="ВЫБОР УРОВНЯ"
                        Style="{StaticResource RoundButton}"
                        Width="250"
                        Height="60"
                        Margin="0,10"
                        FontSize="20"
                        Click="LevelSelectButton_Click"/>

                <Button Content="ВЫХОД"
                        Style="{StaticResource RoundButton}"
                        Width="250"
                        Height="60"
                        Margin="0,10"
                        FontSize="20"
                        Click="ExitButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Level selection overlay -->
        <Border x:Name="LevelSelectOverlay"
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="{StaticResource OverlayBrush}"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ВЫБОР УРОВНЯ"
                           Grid.Row="0"
                           Foreground="White"
                           FontSize="36"
                           FontWeight="Bold"
                           Margin="0,20,0,20"
                           HorizontalAlignment="Center"/>

                <WrapPanel x:Name="LevelsPanel"
                           Grid.Row="1"
                           HorizontalAlignment="Center"/>

                <Button Content="НАЗАД"
                        Grid.Row="2"
                        Style="{StaticResource RoundButton}"
                        Width="150"
                        Height="50"
                        Margin="0,20"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        Click="BackButton_Click"/>
            </Grid>
        </Border>

        <!-- Bike selection overlay -->
        <Border x:Name="BikeSelectOverlay"
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="{StaticResource OverlayBrush}"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ВЫБОР БАЙКА"
                           Grid.Row="0"
                           Foreground="White"
                           FontSize="36"
                           FontWeight="Bold"
                           Margin="0,20,0,20"
                           HorizontalAlignment="Center"/>

                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center">
                    <!-- Standard bike -->
                    <Border Background="#33FFFFFF"
                            Margin="0,10"
                            CornerRadius="10"
                            Width="450">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="СТАНДАРТНЫЙ"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       Foreground="White"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>

                            <TextBlock Text="Сбалансированный мотоцикл с хорошими характеристиками"
                                       Grid.Column="0"
                                       Grid.Row="1"
                                       Foreground="#CCCCCC"
                                       FontSize="14"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>

                            <Button Content="ВЫБРАТЬ"
                                    Tag="Standard"
                                    Grid.Column="1"
                                    Grid.RowSpan="2"
                                    Style="{StaticResource RoundButton}"
                                    Width="120"
                                    Height="45"
                                    Margin="10,0,0,0"
                                    Click="BikeTypeButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Sport bike -->
                    <Border Background="#33FFFFFF"
                            Margin="0,10"
                            CornerRadius="10"
                            Width="450">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="СПОРТИВНЫЙ"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       Foreground="White"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>

                            <TextBlock Text="Легкий и мощный мотоцикл с высокой скоростью"
                                       Grid.Column="0"
                                       Grid.Row="1"
                                       Foreground="#CCCCCC"
                                       FontSize="14"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>

                            <Button Content="ВЫБРАТЬ"
                                    Tag="Sport"
                                    Grid.Column="1"
                                    Grid.RowSpan="2"
                                    Style="{StaticResource RoundButton}"
                                    Width="120"
                                    Height="45"
                                    Margin="10,0,0,0"
                                    Click="BikeTypeButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Off-road bike -->
                    <Border Background="#33FFFFFF"
                            Margin="0,10"
                            CornerRadius="10"
                            Width="450">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="ВНЕДОРОЖНЫЙ"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       Foreground="White"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>

                            <TextBlock Text="Тяжелый мотоцикл с хорошим сцеплением для пересеченной местности"
                                       Grid.Column="0"
                                       Grid.Row="1"
                                       Foreground="#CCCCCC"
                                       FontSize="14"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>

                            <Button Content="ВЫБРАТЬ"
                                    Tag="OffRoad"
                                    Grid.Column="1"
                                    Grid.RowSpan="2"
                                    Style="{StaticResource RoundButton}"
                                    Width="120"
                                    Height="45"
                                    Margin="10,0,0,0"
                                    Click="BikeTypeButton_Click"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <Button Content="НАЗАД"
                        Grid.Row="2"
                        Style="{StaticResource RoundButton}"
                        Width="150"
                        Height="50"
                        Margin="0,20"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        Click="BikeSelectBackButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>